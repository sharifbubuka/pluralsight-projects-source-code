{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": false
    }
  },
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "bracketSpacing": true,
      "jsxBracketSameLine": true,
      "printWidth": 120
    }],
    "no-console": "off",
    "no-unused-vars": [ "error", { "argsIgnorePattern": "^_" } ],
    "func-names": ["error", "as-needed"],
    "prefer-destructuring": ["error", { "VariableDeclarator": { "object": true, "array": false }}]
  }
}
